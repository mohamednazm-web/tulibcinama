extends base

block content
    section.posterOne
        .posterOne__title(href="#")
            p چەشنەکان
        .posters

            each poster in chashn
                .poster
                  a.poster__link(href=`/movies/${poster.slug}`)
                    img.poster__img(src=`${poster.idPoster}`, alt="Poster 1" loading="lazy")
                    p.poster__titleFilm= poster.title