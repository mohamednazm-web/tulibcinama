extends base

block content
    html
      body
        section.posterOne
        .profile-padding
        //span.back.profile-span
        //i.fas.fa-long-arrow-alt-left
        //| back
        section(class='profile_container')
          div(class='profile_img_section')
            img(class='profile_img-LG' src=`/img/profile/${mProfile.imageProfile}`)
            //div(class='flag_wrapper')
              img.flag(src='/img/flag.jpg' alt='South Korean Flag')
          div(class='profile_desc_section')
            h2.profile-h2= mProfile.memberName
            //- - var n = 0;
            //-   while n < member.length
            //-     - var numOfPoster = n++
            //h3.profile-h3= `ژمارەی بەرهەم : ${n}`
            h3.profile-h3= `ژمارەی بەرهەم : ${mProfile.numOfPosters}`
            h2.profile-h2.small
            p.description.profile-p= mProfile.description
            //.interests
              span(class='interests_item profile-span') Not defined yet
              span(class='interests_item profile-span') Not defined yet
              span(class='interests_item profile-span') Not defined yet
        section.posterOne
        .posterOne__title(href="#")
            if mProfile.numOfPosters > 0
              p(style="font-size:1.8rem; font-weight: bold; letter-spacing: 0; margin-top: -3rem;") بەرهەمەکانی
            else
              p(style="font-size:2rem; font-weight: bold; letter-spacing: 0; margin-top: -3rem;") ...هیچ بەرهەمێک نەدۆزراوە لە ئێستادا
        .posters

            each poster in film
                .poster_container_nice
                    .card_poster_nice
                        
                        .img1(style=`background-image:url(${poster.idPoster});`)
                        //.img2(style=`background-image:url(${poster.idPoster});`)
                        a(href=`/movies/${poster.slug}`).text= poster.description
                        a(href=`/movies/${poster.slug}`)
                            .catagory Film
                                i.fas.fa-film
                        a(href=`/movies/${poster.slug}`)
                            //.views= poster.hasViewd
                                i.far.fa-eye
                    a(href=`/movies/${poster.slug}`).card_poster_other
                        p.poster__titleFilm= poster.title
